@model Entities.Post

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Post</h4>
        <hr />
        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="ForumId" class="control-label col-md-2">ForumId</label>
            <div class="col-md-10">
                <select asp-for="ForumId" class="form-control" />
                <span asp-validation-for="ForumId" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="LastChangedDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="LastChangedDate" class="form-control" />
                <span asp-validation-for="LastChangedDate" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PublishDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="PublishDate" class="form-control" />
                <span asp-validation-for="PublishDate" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ReplyToPostId" class="control-label col-md-2">ReplyToPostId</label>
            <div class="col-md-10">
                <select asp-for="ReplyToPostId" class="form-control" />
                <span asp-validation-for="ReplyToPostId" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Text" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Text" class="form-control" />
                <span asp-validation-for="Text" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="UserId" class="control-label col-md-2">UserId</label>
            <div class="col-md-10">
                <select asp-for="UserId" class="form-control" />
                <span asp-validation-for="UserId" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
